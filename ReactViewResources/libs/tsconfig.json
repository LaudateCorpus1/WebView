{
    "compilerOptions": {
        "outDir": ".",
        "module": "amd",
        "target": "es2017",
        "sourceMap": false,
        "moduleResolution": "node",
        "rootDir": ".",
        "jsx": "react",
        "declaration": true,
        "declarationDir": "./../../ViewGenerator/declarations",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "strictNullChecks": true,
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "removeComments": true
    },
    "compileOnSave": true,
    "exclude": [
        "node_modules"
    ]
}
